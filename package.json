{
  "name": "YouDownload",
  "version": "1.1.0",
  "description": "Descargador de videos moderno",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "chmod +x resources/linux/yt-dlp || true"
  },
  "dependencies": {
    "electron-prompt": "^1.7.0",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^31.0.0", 
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.youdownload.app",
    "productName": "YouDownload",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/${os}",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "win": { "target": "nsis" },
    "linux": { "target": "AppImage" }
  }
}